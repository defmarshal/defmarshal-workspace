    # Example: quick nyaa-search "ubuntu 24.04" --limit 5
    python3 "$WORKSPACE/nyaa-search" "$@"
    ;;
  nyaa-top)
    # Show top torrents sorted by seeds (Sukebei.Nyaa.si)
    # Usage: quick nyaa-top [--limit N] [--category cat] [--max-size SIZE] [--pick N] [--select] [--add]
    python3 "$WORKSPACE/nyaa-top" "$@"
    ;;
  log)
    "$WORKSPACE/log-event" "$@"
    ;;
  log-rotate)
    "$WORKSPACE/log-rotate"
    ;;

  disk-usage)
    echo "Disk usage by top-level directory (workspace root):"
    du -sh --exclude='downloads' ./* 2>/dev/null | sort -hr | head -20
    echo ""
    echo "Total workspace size (excluding downloads):"
    du -sh . --exclude='downloads'
    echo ""
    echo "Downloads directory size (if present):"
    if [ -d downloads ]; then
      du -sh downloads
    else
      echo "  (no downloads directory)"
    fi
    ;;

  updates-check)
    "$WORKSPACE/scripts/updates-check.sh" "$@"
    ;;

  updates-apply)
    "$WORKSPACE/scripts/updates-apply.sh" "$@"
    ;;
  cleanup-downloads)
