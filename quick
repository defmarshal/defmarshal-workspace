    ;;
  agents)
    # List running sessions/agents; pass through flags
    if [ $# -eq 0 ] && [ ! -t 1 ]; then
      /home/ubuntu/.npm-global/bin/openclaw sessions --json
    else
      /home/ubuntu/.npm-global/bin/openclaw sessions "$@"
    fi
    ;;
  downloads)
    # Show aria2 download progress (uses RPC)
    python3 "$WORKSPACE/downloads-status" "$@"
    ;;
  torrent-status)
    # Alias for downloads (local, no approval needed)
    python3 "$WORKSPACE/downloads-status" "$@"
    ;;
  content-latest)
    # Show the latest content digest/note (excluding INDEX.md)
    latest=$(ls -t content/*.md 2>/dev/null | grep -v 'INDEX.md' | head -1)
    if [ -z "$latest" ]; then
      echo "No content files found in content/" >&2
      exit 1
    fi
    cat "$latest"
    ;;

  today-content)
    # Show today's content files and digest status
    today=$(date -u +%Y-%m-%d)
    echo "Today's Content ($today)"
    echo "---------------------"
    files=$(ls -1 content/${today}*.md 2>/dev/null || true)
    if [ -z "$files" ]; then
      echo "No content files created today yet."
    else
      echo "$files" | while IFS= read -r f; do
        size=$(stat -c%s "$f" 2>/dev/null || echo "?")
        printf "  %-40s %6s bytes\n" "$(basename "$f")" "$size"
      done
    fi
    echo ""
    digest="content/${today}-daily-digest.md"
    if [ -f "$digest" ]; then
      echo "✅ Daily digest exists: $digest"
    else
      echo "⚠️  Daily digest NOT created yet for today"
    fi
    ;;

  content-index-update)
    # Regenerate content/INDEX.md to reflect current content files
    "$WORKSPACE/update-content-index.sh"
    ;;
  research-index-update)
    # Regenerate research/INDEX.md to reflect current research reports
    "$WORKSPACE/update-research-index.sh"
    ;;
  research-watchlist)
    # Show the latest research watchlist file
    latest=$(ls -t research/watchlist-*.md 2>/dev/null | head -1)
    if [ -z "$latest" ]; then
      echo "No research watchlist files found in research/" >&2
      exit 1
    fi
    cat "$latest"
    ;;
  reports)
    # List daily digest reports in reports/ (most recent first)
    if [ ! -d "$WORKSPACE/reports" ]; then
      echo "No reports directory found" >&2
      exit 1
    fi
    ls -t "$WORKSPACE/reports"/*.md 2>/dev/null | xargs -r basename -a | sed 's/\.md$//'
    ;;
  research-hub-status)
    # Check Research Hub deployment status
    echo "=== Research Hub Status ==="
    if [ -d "$WORKSPACE/apps/research-hub/.git" ]; then
      echo "Local: standalone repo (unexpected - should be in workspace subdir)"
    else
      echo "Local: integrated in workspace (prebuild copies research/ to public/research)"
    fi
    # Check if remote standalone exists
    if git -C "$WORKSPACE" remote -v | grep -q "research-hub"; then
      echo "Standalone remote: configured"
    else
      echo "Standalone remote: not configured"
    fi
    # Check if vercel project linked (look for .vercel directory)
    if [ -d "$WORKSPACE/apps/research-hub/.vercel" ]; then
      echo "Vercel: linked"
      vercel ls 2>/dev/null | grep research-hub || echo "Vercel project: unknown"
    else
      echo "Vercel: not linked"
    fi
    ;;
  vercel-prereq)
    # Check Research Hub deployment prerequisites (gh, vercel, gateway)
    echo "=== Research Hub Deployment Prerequisites ==="
    echo ""

    # Check OpenClaw gateway
    echo "1. Gateway status:"
    if openclaw gateway status &>/dev/null; then
      echo "   ✓ Gateway is running"
    else
      echo "   ✗ Gateway is not accessible"
    fi

    # Check gh binary
    echo "2. GitHub CLI (gh):"
    if command -v gh &>/dev/null; then
      echo "   ✓ gh found at $(command -v gh)"
      if gh auth status &>/dev/null; then
        echo "   ✓ gh is authenticated"
      else
        echo "   ⚠ gh not authenticated. Run: gh auth login"
      fi
    else
      echo "   ✗ gh not installed or not in PATH"
    fi

    # Check vercel binary
    echo "3. Vercel CLI:"
    if command -v vercel &>/dev/null; then
      echo "   ✓ vercel found at $(command -v vercel)"
      if vercel whoami &>/dev/null; then
        echo "   ✓ vercel is authenticated"
      else
        echo "   ⚠ vercel not authenticated. Run: vercel login"
      fi
    else
      echo "   ✗ vercel not installed or not in PATH"
    fi

    # Check OpenClaw exec allowlist (quick heuristic)
    echo "4. OpenClaw exec allowlist:"
    EXEC_APPROVALS="$HOME/.openclaw/exec-approvals.json"
    if [ -f "$EXEC_APPROVALS" ]; then
      if grep -q '/usr/bin/gh' "$EXEC_APPROVALS"; then
        echo "   ✓ gh appears in allowlist"
      else
        echo "   ⚠ gh not found in allowlist"
      fi
      if grep -q 'vercel' "$EXEC_APPROVALS"; then
        echo "   ✓ vercel appears in allowlist"
      else
        echo "   ⚠ vercel not found in allowlist"
      fi
    else
      echo "   ✗ exec-approvals.json not found"
    fi

    echo ""
    echo "If all checks are green, you can deploy with:"
    echo "  quick research-hub-deploy"
    echo ""
    echo "For full instructions, see: docs/research-hub-deployment.md"
    ;;
  digest)
    # Show the latest daily digest report from reports/
    latest=$(ls -t "$WORKSPACE/reports"/*-daily-digest.md 2>/dev/null | head -1)
    if [ -z "$latest" ]; then
      echo "No daily digest reports found in reports/" >&2
      exit 1
    fi
    cat "$latest"
    ;;
  social-monitor)
    # Run the social monitor agent (Twitter trending digest)
    bash "$WORKSPACE/social-monitor-agent.sh"
    ;;
  daily-digest)
    # Generate daily digest report (default: today UTC)
    bash "$WORKSPACE/agents/daily-digest.sh" "${1:-}"
    ;;
  monthly-digest)
    # Generate monthly digest report (default: current month UTC)
    bash "$WORKSPACE/scripts/generate-monthly-digest.sh" "${1:-}"
    ;;
  sudo-check)
    # Check if passwordless sudo is configured
    if sudo -n true 2>/dev/null; then
      echo "✓ Passwordless sudo is working! You can use elevated: true in exec commands."
      echo "Privileges:"
      sudo -l | head -5
    else
      echo "✗ Passwordless sudo NOT configured."
      echo "Run './setup-sudo.sh' (with sudo) to set it up."
      exit 1
    fi
    ;;
  agent-manager)
    # Run agent-manager maintenance once (used by cron)
    "$WORKSPACE/agents/agent-manager.sh" --once
    ;;
  supervisor)
    # Run supervisor health check (used by cron)
    "$WORKSPACE/agents/supervisor.sh"
    ;;
  supervisor-logs)
    # Show supervisor log
    tail -n 20 "$WORKSPACE/memory/supervisor.log" 2>/dev/null || echo "No supervisor.log yet"
    ;;
  supervisor-status)
    # Run supervisor health check and show concise summary
    echo "=== Supervisor Health Check ==="
    if [ -x "$WORKSPACE/agents/supervisor.sh" ]; then
      # Run supervisor; it prints SUPERISOR ALERT on issues, otherwise silent
      if OUTPUT=$("$WORKSPACE/agents/supervisor.sh" 2>&1); then
        # Check if any alerts were added (ALERTS array printed)
        if echo "$OUTPUT" | grep -q "SUPERVISOR ALERT:"; then
          echo "Status: ALERT"
          echo "$OUTPUT" | sed -n '/SUPERVISOR ALERT:/,/^$/p'
        else
          echo "Status: OK"
          echo "All checks passed."
        fi
      else
        echo "Status: ERROR"
        echo "Supervisor script failed to run."
      fi
    else
      echo "Supervisor script not found or not executable: $WORKSPACE/agents/supervisor.sh"
    fi
    ;;
  gateway-info)
    # Show detailed OpenClaw gateway status and troubleshooting info
    echo "=== OpenClaw Gateway Status ==="
    if command -v openclaw &>/dev/null; then
      openclaw gateway status
      echo ""
      echo "Dashboard: http://127.0.0.1:18789/"
      echo "Service file: ~/.config/systemd/user/openclaw-gateway.service"
      echo "Logs: /tmp/openclaw/openclaw-*.log"
    else
      echo "openclaw CLI not found"
    fi
    ;;
  gateway-logs)
    # Show recent OpenClaw gateway logs
    LOGFILE=$(ls -t /tmp/openclaw/openclaw-*.log 2>/dev/null | head -n1)
    if [ -n "$LOGFILE" ]; then
      echo "=== Last 20 lines of $LOGFILE ==="
